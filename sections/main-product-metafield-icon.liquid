{{ 'main-product-metafield-icon.css' | asset_url | stylesheet_tag }}
<div class="our-promises page-width">
  <div class="metafields_ups_icons section-{{ section.id }}-padding">
    <div class="product__ingredients--grid product_heighlights mobile_hide">
      {% if product.metafields.custom.product_highlight_icons != blank %}
        {% assign icons = product.metafields.custom.product_highlight_icons.value %}
        <div class="metafield_values {% if icons.count >= 3 %} meta_value_more {% else %} meta_value_less {% endif %}">
          {% for image_url in icons %}
            <div class="grid__items product__ingredients-main">
              <div class="product__ingredients-contents flex">
                <div class="product_meta_image">
                  {% if image_url != blank %}
                    <img src="{{ image_url | image_url }}" alt="img">
                  {% endif %}
                  {% if product.metafields.custom.product_highlight_text != blank
                    and product.metafields.custom.product_highlight_text.value != blank
                  %}
                    {% assign texts = product.metafields.custom.product_highlight_text.value | split: ',' %}
                    {% if texts[forloop.index0] != blank %}
                      <div class="product_meta_text">
                        {{ texts[forloop.index0] | replace: '[', '' | replace: ']', '' | replace: '"', '' }}
                      </div>
                    {% endif %}
                  {% endif %}
                </div>
              </div>
            </div>
          {% endfor %}
        </div>
      {% endif %}
    </div>
  </div>
</div>

{%- style -%}
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
      padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
    }

    @media screen and (min-width: 750px) {
      .section-{{ section.id }}-padding {
        padding-top: {{ section.settings.padding_top }}px;
        padding-bottom: {{ section.settings.padding_bottom }}px;
      }
    }

{%- endstyle -%}

{% schema %}
{
  "name": "Product metafield",
  "settings": [
    {
      "type":"text",
      "id":"heading",
      "label":"Heading"
    },
    {
      "type": "header",
      "content": "Section Padding"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding bottom",
      "default": 36
    }
  ],
  "presets":[{
    "name": "Product metafield"
  }]
}
{% endschema %}
